@model Hasslefree.Web.Models.Rentals.CompleteRental

<h3 class="subheadline">Listing Information</h3>
<div class="form-group">
	<label for="Premises">The Premises</label>
	@Html.TextBoxFor(m => m.Premises, new { @class = "form-control", @placeholder = "The Premises" })
</div>
<div class="form-group">
	<label for="StandErf">Stand/Erf</label>
	@Html.TextBoxFor(m => m.StandErf, new { @class = "form-control", @placeholder = "Stand/Erf" })
</div>
<div class="form-group">
	<label for="Township">Township</label>
	@Html.TextBoxFor(m => m.Township, new { @class = "form-control", @placeholder = "Township" })
</div>
<div class="form-group">
	<label for="Address">Being (street address)</label>
	@Html.TextBoxFor(m => m.Address, new { @class = "form-control", @placeholder = "Being (street address)", google_address = "true" })
</div>
<h3 class="subheadline">Rental Information</h3>
<div class="form-group">
    <label for="MonthlyRental">Monthly Rental</label>
    @Html.TextBox("MonthlyRental", String.Format("{0:0}", Model.MonthlyRental), new { id = "MonthlyRental", @class = "form-control", @placeholder = "Monthly Rental (R)" })
</div>
<div class="form-group">
    <label for="Deposit">Deposit</label>
    @Html.TextBox("Deposit", String.Format("{0:0}", Model.Deposit), new { id = "Deposit", @class = "form-control", @placeholder = "Deposit (R)" })
</div>
<div class="form-group">
    <label for="PostalAddress1">Rental Payment Date</label>
    @Html.TextBox("RentalPaymentDate", (Model.RentalPaymentDate.HasValue ? Model.RentalPaymentDate.Value.ToString("yyyy/MM/dd") : ""), new { id = "RentalPaymentDate", @class = "form-control", @placeholder = "Rental Payment Date" })
</div>
<div class="form-group">
    <label for="PostalAddress2">Deposit Payment Date</label>
    @Html.TextBox("DepositPaymentDate", (Model.DepositPaymentDate.HasValue ? Model.DepositPaymentDate.Value.ToString("yyyy/MM/dd") : ""), new { id = "DepositPaymentDate", @class = "form-control", @placeholder = "Deposit Payment Date" })
</div>
@if (Model.LeaseType != Hasslefree.Core.Domain.Rentals.LeaseType.Natural)
{
	<div class="form-group">
		<label for="LeaseName">Lease Name</label>
		@Html.TextBoxFor(m => m.LeaseName, new { @class = "form-control", @placeholder = "Lease Name" })
	</div>
	<div class="form-group">
		<label for="AuthorizedName">Authorized Representative Name</label>
		@Html.TextBoxFor(m => m.AuthorizedName, new { @class = "form-control", @placeholder = "Authorized Representative Name" })
	</div>
	<div class="form-group">
		<label for="AuthorizedSurname">Authorized Representative Surname</label>
		@Html.TextBoxFor(m => m.AuthorizedSurname, new { @class = "form-control", @placeholder = "Authorized Representative Surname" })
	</div>
}