@model List<Hasslefree.Web.Models.Sales.SaleListItem>
@{
	var securityService = DependencyResolver.Current.GetService<Hasslefree.Services.Security.ISecurityService>();
	var isAdmin = securityService.IsInSecurityGroup(Hasslefree.Web.Framework.SessionManager.Current.Login.LoginId, new List<string> { "Admin" });
}

<div class="clearfix"></div>
<div id="content">
	<div class="container">
		<div class="row justify-content-md-center">
			<div class="col col-lg-12 col-xl-10">
				<div class="row has-sidebar">

					@Html.Action("Index", "AccountMenu")

					<div class="col-md-7 col-lg-8 col-xl-8">
						<div class="page-header bordered">
							<h1>Sales</h1>
							@if (!isAdmin && !ViewBag.IsLandlord)
							{
								<a style="position: absolute; right: 0px; top: 0px;" href="/account/add-sale" class="btn btn-primary">Add Sale</a>
							}
						</div>
						<table id="new-listings" class="table table-striped table-bordered bootstrap-datatable datatable table-responsive" style="table-layout:fixed;">
							<thead>
								<tr>
									<th width="30%">Last Modified</th>
									<th width="40%">Address</th>
									<th width="30%">Type</th>
									<th width="30%">Status</th>
									<th width="10%">
										Actions
									</th>
								</tr>
							</thead>
							<tbody>
								@if (!Model.Any())
								{
									<tr>
										<td colspan="6">
											No Sales
										</td>
									</tr>
								}
								@foreach (var item in Model)
								{
									<tr>
										<td>
											@item.ModifiedOn.ToString("dd MMMM yyyy, HH:mm")
										</td>
										<td>@item.Address</td>
										<td>@item.Type</td>
										<td>
											<p data-toggle="tooltip" title="@item.Status">@item.StatusDescription&nbsp;<i class="fa fa-exclamation-circle"></i></p>
										</td>
										<td>
											<a href="/account/sale?saleId=@item.Id" class="btn btn-sm btn-link set-default">View</a>
										</td>
									</tr>
								}
							</tbody>
						</table>
						<hr>

					</div>

					<hr>
				</div>
			</div>
		</div>
	</div>
</div>