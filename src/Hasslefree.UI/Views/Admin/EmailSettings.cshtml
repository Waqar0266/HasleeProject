@model Hasslefree.Core.Configuration.EmailSettings

<div class="clearfix"></div>
<div id="content">
	<div class="container">
		<div class="row justify-content-md-center">
			<div class="col col-lg-12 col-xl-10">
				<div class="row has-sidebar">

					@Html.Action("Index", "AccountMenu")

					<div class="col-md-7 col-lg-8 col-xl-8">
						<div class="page-header bordered">
							<h1>Email Settings <small>Manage the platform email settings</small></h1>
						</div>
						<form action="/email-settings" method="post">
							@if (ViewBag.Success == true)
							{
								<div class="alert alert-success" role="alert">
									The platform email settings is updated successfully!
								</div>
							}
							@{
								if (ViewData.ModelState.Any(m => m.Value.Errors.Count > 0))
								{
									<div class="alert alert-danger" role="alert">
										@Html.ValidationSummary(false)
									</div>
								}
							}
							<div class="form-group">
								<label for="BusinessName">Host</label>
								@Html.TextBoxFor(m => m.Host, new { @class = "form-control", @placeholder = "Host" })
							</div>
							<div class="form-group">
								<label for="TradeName">Port</label>
								@Html.TextBoxFor(m => m.Port, new { @class = "form-control", @placeholder = "Port" })
							</div>
							<div class="form-group">
								<label for="Phone">Username</label>
								@Html.TextBoxFor(m => m.Username, new { @class = "form-control", @placeholder = "Username" })
							</div>
							<div class="form-group">
								<label for="Fax">Password</label>
								@Html.TextBoxFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
							</div>
							<hr>
							<div class="form-group action">
								<button type="submit" class="btn btn-lg btn-primary" data-loading-text="<i class='fa fa-spinner fa-spin'></i> Updating...">Update Email Settings</button>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>