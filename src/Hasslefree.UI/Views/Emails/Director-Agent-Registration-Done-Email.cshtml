@model Hasslefree.Web.Models.Agents.DirectorAgentComplete
@{
	Layout = "~/Views/Shared/_Email.cshtml";
}

<table class="forgot-email" cellpadding="0" cellspacing="0" border="0" align="center" style="background-clip:padding-box;border-collapse:collapse;color:#7a8791;font-family:Helvetica,Arial,sans-serif;font-size:14px;line-height:20px;margin:0 auto;width:100%;background-color:#ffffff;border-left: solid 1px #E9ECEA; border-right: solid 1px #E9ECEA;border-bottom: solid 1px #E9ECEA;" bgcolor="#ffffff">
	<tbody>
		<tr>
			<td valign="top">
				<table cellpadding="0" cellspacing="0" border="0" style="background-clip:padding-box;border-collapse:collapse;width:100%">
					<tbody>
						<tr>
							<td width="40"></td>
							<td style="background:white;background-clip:padding-box;border-radius:0 0 3px 3px;color:#7a8791;font-family:Helvetica,Arial,sans-serif;font-size:15px;line-height:22px;overflow:hidden;padding:40px 0" bgcolor="white">
								<h1 style="font-family:Helvetica,Arial,sans-serif;font-size:20px;line-height:24px;color:#4b5862;margin:0 0 15px 0;font-weight: bold;">
									Agent Registration Complete: @Model.Name @Model.Surname
								</h1>
								<p style="font-family:Helvetica,Arial,sans-serif;font-size:14px;line-height:22px;color:#7a8791;margin:0 0 30px 0;">
									Agent completed the registration process.  Please login to your profile to review @(Model.Gender == Hasslefree.Core.Domain.Common.Gender.Male ? "his" : "her") profile.
									<br />
									<br />
									<b>Email:</b> @Model.Email
									<br />
									<b>Mobile:</b> @Model.Mobile
									<br />
									<br />
									<br />
									Please find attached agent documentation.
									<br />
									<br />
									Click <a href="@Model.Link" target="_blank">here</a> to view all the agent documentation.
								</p>
							</td>
							<td width="40"></td>
						</tr>
					</tbody>
				</table>
			</td>
		</tr>
	</tbody>
</table>