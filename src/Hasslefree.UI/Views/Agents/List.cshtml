@model List<Hasslefree.Web.Models.Agents.AgentListItem>

<div class="clearfix"></div>
<div id="content">
	<div class="container">
		<div class="row justify-content-md-center">
			<div class="col col-lg-12 col-xl-10">
				<div class="row has-sidebar">

					@Html.Action("Index", "AccountMenu")

					<div class="col-md-7 col-lg-8 col-xl-8">
						<div class="page-header bordered">
							<h1>Agents</h1>
							<a style="position: absolute; right: 0px; top: 0px;" href="/account/add-agent" class="btn btn-primary">Add Agent</a>
						</div>



						<table id="agents" class="table table-striped table-bordered bootstrap-datatable datatable table-responsive" style="table-layout:fixed;">
							<thead>

								<tr>
									<th width="20%">Agent ID</th>
									<th width="50%">Name</th>
									<th width="20%">Status</th>
									<th width="10%">
										Actions
									</th>
								</tr>
							</thead>
							<tbody>
								@if (!Model.Any())
								{
									<tr>
										<td colspan="4">
											No Agents
										</td>
									</tr>
								}
								@foreach (var item in Model)
								{
									<tr>
										<td>
											<a href="/account/agent/@item.AgentId">
												@item.AgentId
											</a>
										</td>
										<td>
											@item.Title @item.Name @item.Surname
										</td>
										<td>
											@item.Status
										</td>
										<td>
											<a href="/account/agent/@item.AgentId" class="btn btn-sm btn-link set-default">Edit</a>
										</td>
									</tr>
								}
							</tbody>
						</table>
						<hr>
					</div>



				</div>
			</div>
		</div>
	</div>
</div>

<script type="text/javascript">

	$('body').popover({
		trigger: 'hover',
		placement: "bottom",
		html: true
	});


</script>