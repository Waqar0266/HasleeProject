@model Hasslefree.Web.Models.Agents.CompleteAgentSignature

<div class="clearfix"></div>
<div id="content">
	<div class="container">
		<div class="row justify-content-md-center">
			<div class="col col-lg-12 col-xl-12">
				<div class="row">

					<div class="col-md-12 col-lg-12 col-xl-12">
						<div class="page-header bordered">
							<h1>Complete Application <small>Complete your signatures</small></h1>
						</div>
						<form action="/account/agent/complete-signature" method="post" id="agent-form">
							@Html.HiddenFor(m => m.AgentGuid)
							@Html.HiddenFor(m => m.Name)
							@Html.HiddenFor(m => m.Surname)
							@{
								if (ViewData.ModelState.Any(m => m.Value.Errors.Count > 0))
								{
									<div class="alert alert-danger" role="alert">
										@Html.ValidationSummary(false)
									</div>
								}
							}
							@Html.AntiForgeryToken()

							<h3 class="subheadline">Signatures</h3>

							@Html.Partial("_SignaturePad", model: "Signature")
							@Html.Partial("_SignaturePad", model: "Initials")

							<hr>
							<div class="form-group action">
								<button type="submit" class="btn btn-lg btn-primary" data-loading-text="<i class='fa fa-spinner fa-spin'></i> Saving...">Continue</button>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

@section PageScripts{

	<script type="text/javascript">

		$('#agent-form').on('submit', function () {
			return Hasslefree.Functions.Validate(this);
		});

	</script>

}