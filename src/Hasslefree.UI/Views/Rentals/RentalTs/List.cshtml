@model List<Hasslefree.Web.Models.RentalTs.RentalTListItem>

<div class="clearfix"></div>
<div id="content">
	<div class="container">
		<div class="row justify-content-md-center">
			<div class="col col-lg-12 col-xl-10">
				<div class="row has-sidebar">

					@Html.Action("Index", "AccountMenu")

					<div class="col-md-7 col-lg-8 col-xl-8">
						<div class="page-header bordered">
							<h1>Tenants</h1>
							@if (!ViewBag.IsAdmin && !ViewBag.IsLandlord && !ViewBag.IsDirector)
							{
								<a style="position: absolute; right: 0px; top: 0px;" href="/account/add-tenant" class="btn btn-primary">Add Tenant</a>
							}
						</div>
						<table id="tenants" class="table table-striped table-bordered bootstrap-datatable datatable table-responsive" style="table-layout:fixed;">
							<thead>
								<tr>
									<th width="30%">Last Modified</th>
									<th width="30%">Address</th>
									<th width="40%">Status</th>
									<th width="10%">
										Actions
									</th>
								</tr>
							</thead>
							<tbody>
								@if (!Model.Any())
								{
									<tr>
										<td colspan="5">
											No Tenants
										</td>
									</tr>
								}
								@foreach (var item in Model)
								{
									<tr>
										<td>
											@item.ModifiedOn.ToString("dd MMMM yyyy, HH:mm")
										</td>
										<td>@item.Address</td>
										<td>
											<p data-toggle="tooltip" title="@item.Status">@item.StatusDescription&nbsp;<i class="fa fa-exclamation-circle"></i></p>
										</td>
										<td>
											<a href="/account/rentalt?rentaltId=@item.Id" class="btn btn-sm btn-link set-default">View</a>
										</td>
									</tr>
								}
							</tbody>
						</table>
						<hr>
					</div>
					<hr>
				</div>
			</div>
		</div>
	</div>
</div>