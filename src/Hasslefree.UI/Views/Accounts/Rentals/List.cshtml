@model List<Hasslefree.Web.Models.Rentals.RentalListItem>

<div class="clearfix"></div>
<div id="content">
	<div class="container">
		<div class="row justify-content-md-center">
			<div class="col col-lg-12 col-xl-10">
				<div class="row has-sidebar">

					@Html.Action("Index", "AccountMenu")

					<div class="col-md-7 col-lg-8 col-xl-8">
						<div class="page-header bordered">
							<h1>Rentals</h1>
							<a style="position: absolute; right: 0px; top: 0px;" href="/account/add-rental" class="btn btn-primary">Add Rental</a>
						</div>
						<table id="listings" class="table table-striped table-bordered bootstrap-datatable datatable table-responsive" style="table-layout:fixed;">
							<thead>
								<tr>
									<th width="15%">Rental ID</th>
									<th width="40%">Type</th>
									<th width="10%">
										Actions
									</th>
								</tr>
							</thead>
							<tbody>
								@if (!Model.Any())
								{
									<tr>
										<td colspan="3">
											No Rentals
										</td>
									</tr>
								}
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.RentalId</td>
										<td>
											@item.Type
										</td>
										<td>
											<a href="/account/rental?rentalId=@item.RentalId" class="btn btn-sm btn-link set-default">View</a>
										</td>
									</tr>
								}
							</tbody>
						</table>
						<hr>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>