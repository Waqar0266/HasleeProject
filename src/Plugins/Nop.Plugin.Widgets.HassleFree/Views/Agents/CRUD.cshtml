@using Nop.Plugin.Widgets.HassleFree.Domain
@model Nop.Plugin.Widgets.HassleFree.Models.Agents.AgentViewModel
@{
    Layout = "_ColumnsTwo";
    ViewBag.PageTitle = "Listings";

    //page class
    Html.AppendPageCssClassParts("html-account-page");
    Html.AppendPageCssClassParts("html-order-list-page");
}

@section left
{
    @await Component.InvokeAsync("CustomerNavigation", new { selectedTabId = 150 })
}

<form asp-route="Plugin.Widgets.HassleFree.Agents.Add" method="post">
    <div class="page account-page address-edit-page">
        <div class="page-title">
            <h1>@T("Account.MyAccount") - Add Agent</h1>
        </div>
        <div class="page-body form-horizontal">
            <div asp-validation-summary="ModelOnly" class="message-error"></div>
            <input class="address-id" asp-for="Id" type="hidden" />
            <div class="fieldset">
                @if (ViewBag.AllowAgentType)
                {
                    <div class="form-group">
                        <label for="agent-type-full" class="control-label col-sm-2 col-md-2 col-xs-3">Agent Type:</label>
                        <div class="col-sm-6 col-md-6 col-xs-9">
                            <label class="radio-inline">
                                <input type="radio" asp-for="AgentType" value="5" checked="@(Model.AgentType == AgentType.FullStatus)" id="agent-type-full" />
                                <span class="forcheckbox" for="gender-male">Full Status</span>
                            </label>
                            <label class="radio-inline">
                                <input type="radio" asp-for="AgentType" value="10" checked="@(Model.AgentType == AgentType.Intern)" id="agent-type-intern" />
                                <span class="forcheckbox" for="gender-female">Intern</span>
                            </label>
                        </div>
                    </div>
                }
                else
                {
                    <div class="form-group" style="font-size: unset;">
                        <label class="control-label col-sm-2 col-md-2 col-xs-3" asp-for="AgentType" asp-postfix=":"></label>
                        <input type="hidden" name="AgentType" value="10" />
                        Intern
                    </div>
                }

                <div class="form-group">
                    <label class="control-label col-sm-2 col-md-2 col-xs-3" asp-for="Name" asp-postfix=":"></label>
                    <div class="visible-xs form-title-rquired"><nop-required /></div>
                    <div class="col-sm-6 col-md-6 col-xs-12">
                        <input class="form-control" asp-for="Name" />
                    </div>
                    <span asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2 col-md-2 col-xs-3" asp-for="Surname" asp-postfix=":"></label>
                    <div class="visible-xs form-title-rquired"><nop-required /></div>
                    <div class="col-sm-6 col-md-6 col-xs-12">
                        <input class="form-control" asp-for="Surname" />
                    </div>
                    <span asp-validation-for="Surname"></span>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2 col-md-2 col-xs-3" asp-for="Email" asp-postfix=":"></label>
                    <div class="visible-xs form-title-rquired"><nop-required /></div>
                    <div class="col-sm-6 col-md-6 col-xs-12">
                        <input class="form-control" asp-for="Email" />
                    </div>
                    <span asp-validation-for="Email"></span>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2 col-md-2 col-xs-3" asp-for="IdNumber" asp-postfix=":"></label>
                    <div class="visible-xs form-title-rquired"><nop-required /></div>
                    <div class="col-sm-6 col-md-6 col-xs-12">
                        <input class="form-control" asp-for="IdNumber" />
                    </div>
                    <span asp-validation-for="IdNumber"></span>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2 col-md-2 col-xs-3" asp-for="Mobile" asp-postfix=":"></label>
                    <div class="visible-xs form-title-rquired"><nop-required /></div>
                    <div class="col-sm-6 col-md-6 col-xs-12">
                        <input class="form-control" asp-for="Mobile" />
                    </div>
                    <span asp-validation-for="Mobile"></span>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2 col-md-2 col-xs-3" asp-for="Province" asp-postfix=":"></label>
                    <div class="visible-xs form-title-rquired"><nop-required /></div>
                    <div class="col-sm-6 col-md-6 col-xs-12">
                        <select class="form-control" asp-for="Province" asp-items="Model.AvailableProvinces"></select>
                    </div>
                    <span asp-validation-for="Province"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-md-offset-2 col-md-2">
                    <button type="submit" class="btn btn-primary register-next-step-button" name="save-agent-button">@T("Common.Save")</button>
                </div>
            </div>
        </div>
    </div>
</form>