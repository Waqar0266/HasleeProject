@model Hasslefree.Web.Models.Agents.CompleteAgent

<div class="clearfix"></div>
<div id="content">
	<div class="container">
		<div class="row justify-content-md-center">
			<div class="col col-lg-12 col-xl-12">
				<div class="row">

					<div class="col-md-12 col-lg-12 col-xl-12">
						<div class="page-header bordered">
							<h1>Complete Registration <small>Complete your agent profile</small></h1>
						</div>
						<form action="/account/agent/complete-documentation" method="post">
							@Html.HiddenFor(m => m.AgentId)
							@{
								if (ViewData.ModelState.Any(m => m.Value.Errors.Count > 0))
								{
									<div class="alert alert-danger" role="alert">
										@Html.ValidationSummary(false)
									</div>
								}
							}
							@Html.AntiForgeryToken()

							<h3 class="subheadline">Documents/Attachments</h3>
							<p>
								Please upload the following documentation:
								<ul>
									<li>CV</li>
									<li>ID</li>
								</ul>
							</p>
							<div class="row">
								@Html.Partial("_FileUploader", model: "UploadIds")
							</div>
							<hr>
							<div class="form-group action">
								<button type="submit" class="btn btn-lg btn-primary">Continue</button>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>